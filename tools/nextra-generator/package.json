{
	"name": "nextra-generator",
	"version": "1.0.0",
	"description": "Library and CLI for generating Nextra documentation sites with Page Router and App Router support",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./cli": "./src/Cli.ts"
	},
	"bin": {
		"nextra-generator": "./dist/Cli.js"
	},
	"scripts": {
		"all": "npm run clean && npm run build && npm run lint && npm run test",
		"build": "vite build",
		"clean": "rimraf dist/ test-output/",
		"lint": "biome check --error-on-warnings",
		"cli": "tsx src/Cli.ts",
		"cli:build": "npm run build && node dist/Cli.js",
		"test": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"keywords": [
		"nextra",
		"documentation",
		"generator",
		"nextjs",
		"mdx",
		"cli"
	],
	"author": "Jolli",
	"license": "MIT",
	"dependencies": {
		"jolli-common": "file:../../common",
		"typescript": "^5.7.2",
		"yaml": "^2.6.1"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^2.1.8",
		"rimraf": "^6.0.1",
		"tsx": "^4.7.0",
		"vite": "^6.0.0",
		"vitest": "^2.1.8"
	},
	"files": [
		"src",
		"dist",
		"README.md"
	],
	"engines": {
		"node": ">=18.0.0"
	}
}
