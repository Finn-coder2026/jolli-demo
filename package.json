{
	"engines": {
		"npm": ">=11",
		"node": ">=22"
	},
	"name": "jolli-root",
	"private": true,
	"scripts": {
		"gateway:start": "npm run gateway:start -w jolli-gateway",
		"gateway:stop": "npm run gateway:stop -w jolli-gateway",
		"gateway:reload": "npm run gateway:reload -w jolli-gateway",
		"gateway:test": "npm run gateway:test -w jolli-gateway",
		"vercel:build": "npm run vercel:build -w jolli-deploy-vercel",
		"vercel:init": "npm run vercel:init -w jolli-deploy-vercel"
	},
	"workspaces": [
		"backend",
		"common",
		"deploy/vercel",
		"extensions/vscode",
		"frontend",
		"gateway",
		"manager",
		"tools/code2docusaurus",
		"tools/docs2docusaurus",
		"tools/docusaurus2vercel",
		"tools/jolliagent",
		"tools/nextra-generator"
	],
	"overrides": {
		"esbuild": ">=0.25.0",
		"path-to-regexp": ">=6.3.0"
	},
	"devDependencies": {
		"typescript": "^5.7.2"
	}
}
