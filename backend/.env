AUTH_EMAILS=@jolli\.ai$
LOG_FILE_NAME_PREFIX=jolli-backend
ORIGIN=http://localhost:8034
SESSION_SECRET=dev
TOKEN_ALGORITHM=HS256
TOKEN_EXPIRES_IN=34d
TOKEN_SECRET=dev
SEED_DATABASE=false
OPENAI_API_KEY=

# AWS Configuration
AWS_REGION=us-west-2

# Parameter Store environment (e.g., "prod", "dev", "staging", "yournamehere")
# When set, loads parameters from /jolli/backend/${PSTORE_ENV}/*
# Parameter names are converted: github/apps/info -> GITHUB_APPS_INFO
# Leave commented out to skip Parameter Store loading
#PSTORE_ENV=dev

# Predefined GitHub App information in JSON format.
# This should come from a secure source in deployed environments.
# Example:
#GITHUB_APPS_INFO=

# Gateway configuration
# When USE_GATEWAY=true, enables HTTPS gateway mode:
# - CORS allows https://*.BASE_DOMAIN and https://admin.BASE_DOMAIN
# - OAuth redirect URIs use https:// protocol via X-Forwarded-Proto
# - Localhost redirects use HTTPS without port
# When USE_GATEWAY is false or not set, localhost redirects use HTTP with port
#USE_GATEWAY=false

