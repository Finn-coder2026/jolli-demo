# Mercure Hub Configuration
# Copy this to your .env file to enable Mercure for distributed SSE

# Enable Mercure integration
MERCURE_ENABLED=true

# Mercure Hub base URL (/.well-known/mercure is appended automatically)
MERCURE_HUB_BASE_URL=http://localhost:3001

# JWT secret for publishing events to Mercure
# Must match MERCURE_PUBLISHER_JWT_KEY in docker-compose.mercure.yml
MERCURE_PUBLISHER_JWT_SECRET=jolli-mercure-publisher-secret-change-in-production

# JWT secret for subscribing to Mercure topics
# Must match MERCURE_SUBSCRIBER_JWT_KEY in docker-compose.mercure.yml
MERCURE_SUBSCRIBER_JWT_SECRET=jolli-mercure-subscriber-secret-change-in-production
