{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"exactOptionalPropertyTypes": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"module": "es2022",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022",
		"types": ["vitest/globals"],
		"useUnknownInCatchVariables": true
	},
	"exclude": ["dist"],
	"include": ["."]
}
