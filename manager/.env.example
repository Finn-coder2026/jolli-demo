# Tenant Registry Database Connection
REGISTRY_DATABASE_URL=postgres://postgres:postgres@localhost:5432/jolli_registry

# Admin PostgreSQL Connection (for creating tenant databases)
ADMIN_POSTGRES_URL=postgres://postgres:postgres@localhost:5432/postgres

# Admin Authentication
ADMIN_EMAIL_PATTERN=^.*@jolli\.ai$

# Encryption key for storing database credentials (32 bytes hex)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Environment (development, production)
NODE_ENV=development

# Admin domain for development (optional)
# When set, requests to localhost will redirect to this domain
# lvh.me resolves to 127.0.0.1 and works with OAuth providers
# ADMIN_DOMAIN=admin.lvh.me

ALLOW_HARD_DELETE=false

# Auto-accept owner invitations (for local dev where email is not configured)
# When true, creating/changing an owner directly creates the global_user and user_org
# records instead of sending an invitation email.
# AUTO_ACCEPT_OWNER_INVITATIONS=true

# ============================================
# Authentication Configuration
# ============================================

# Google OAuth (required for authentication)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT Token Configuration
# Generate secret with: openssl rand -base64 32
TOKEN_SECRET=
TOKEN_EXPIRES_IN=7d

# Redis Session Storage (optional)
# If not set, sessions will be stored in memory (not recommended for production)
# Start Redis with: docker compose up -d
#SESSION_REDIS_URL=redis://localhost:6379

# Initial SuperAdmin Email (optional)
# This user will be auto-created as SuperAdmin on first startup
INITIAL_SUPER_ADMIN_EMAIL=
