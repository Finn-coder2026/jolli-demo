{
	"name": "code2docusaurus",
	"version": "1.0.0",
	"description": "CLI tool to scan code and generate Docusaurus documentation from API routes",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"code2docusaurus": "./dist/index.js"
	},
	"scripts": {
		"all": "npm run clean && npm run build && npm run lint && npm run test && npm run package",
		"clean": "rimraf dist/",
		"dev": "tsx src/index.tsx",
		"build": "npx tsgo",
		"package": "vite build",
		"start": "node dist/index.js",
		"lint": "biome check --error-on-warnings",
		"lint:fix": "biome check --write",
		"test": "vitest run --coverage",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"api",
		"documentation",
		"docusaurus",
		"openapi",
		"code-analysis",
		"cli"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@babel/parser": "^7.23.0",
		"@babel/traverse": "^7.23.0",
		"@babel/types": "^7.23.0",
		"commander": "^11.1.0",
		"fs-extra": "^11.2.0",
		"glob": "^10.3.0",
		"ink": "^6.3.1",
		"ink-spinner": "^5.0.0",
		"openapi-types": "^12.1.3",
		"react": "19.2.0",
		"yaml": "^2.3.4"
	},
	"devDependencies": {
		"@types/babel__traverse": "^7.20.0",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.10.0",
		"@types/react": "19.2.2",
		"@vitest/coverage-v8": "^2.0.0",
		"ink-testing-library": "^3.0.0",
		"tsx": "^4.7.0",
		"typescript": "^5.3.0",
		"vitest": "^2.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
