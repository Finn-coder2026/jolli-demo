{
	"name": "jolli-cli",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"bin": {
		"jolli": "./dist/bin/jolli"
	},
	"scripts": {
		"build": "bun build --compile src/client/cli.ts --outfile dist/bin/jolli",
		"build:linux": "bun build --compile --target=bun-linux-x64 src/client/cli.ts --outfile dist/bin/jolli-linux-x64",
		"lint": "cd .. && bunx @biomejs/biome check --error-on-warnings cli/",
		"lint:fix": "cd .. && bunx @biomejs/biome check --fix cli/",
		"server": "bun src/reference-server/server.ts",
		"test": "bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"@types/eventsource": "^3.0.0",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"commander": "^14.0.2",
		"eventsource": "^4.1.0",
		"jolli-common": "file:../common",
		"open": "^11.0.0",
		"pino": "^10.1.1",
		"pino-pretty": "^13.1.3",
		"wyhash": "^1.0.0",
		"zod": "^3.25.76"
	}
}
