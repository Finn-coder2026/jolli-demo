{
	"name": "docs2docusaurus",
	"version": "1.0.0",
	"description": "CLI tool to generate Docusaurus configuration from existing documentation folders",
	"main": "dist/index.js",
	"type": "module",
	"bin": {
		"docs2docusaurus": "./dist/index.js"
	},
	"scripts": {
		"all": "npm run clean && npm run build && npm run lint && npm run test && npm run package",
		"clean": "rimraf dist/",
		"dev": "tsx src/index.ts",
		"build": "tsc",
		"package": "vite build && chmod +x dist/index.js",
		"start": "node dist/index.js",
		"lint": "biome check --error-on-warnings",
		"lint:fix": "biome check --write",
		"test": "vitest run --coverage",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"docusaurus",
		"documentation",
		"static-site",
		"generator",
		"cli"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"commander": "^11.1.0",
		"fs-extra": "^11.2.0",
		"glob": "^10.3.0",
		"yaml": "^2.3.4"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.10.0",
		"@vitest/coverage-v8": "^2.0.0",
		"rimraf": "^5.0.0",
		"tsx": "^4.7.0",
		"typescript": "^5.3.0",
		"vite": "^5.0.0",
		"vitest": "^2.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
